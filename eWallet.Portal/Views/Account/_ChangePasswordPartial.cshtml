@using Microsoft.AspNet.Identity
@model eWallet.Portal.Models.ManageUserViewModel
<div class="col-md-12">
        <p>You're logged in as <strong>@User.Identity.GetUserName()</strong>.</p>

        @using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4>Change Password Form</h4>
            <hr />
            @Html.ValidationSummary()
            <div class="form-group">
                @Html.LabelFor(m => m.OldPassword, new { @class = "sr-only" })
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", placeholder = "Mật khẩu cũ" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.NewPassword, new { @class = "sr-only" })
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "Mật khẩu mới" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "sr-only" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Xác nhận mật khẩu mới" })
            </div>

            <div class="form-group">
                    <input type="submit" value="Change password"  class="btn btn-default" />
            </div>
        }
    </div>
