@{
    ViewBag.Title = "List Finance Account";
    Layout = null;
}
<ul class="breadcrumb">
    <li><a href='@Url.Content("/Home/eWallet")' class="glyphicons home"><i></i> eWallet</a></li>
    <li class="divider"></li>
    <li>Tài khoản</li>
</ul>
<div class="separator"></div>
@if (ViewBag.List != null)
{
    <div class="widget widget-4 widget-body-white">
        <div class="widget-head">
            <h4 class="heading">Danh sách tài khoản</h4>
        </div>
        <div class="widget-body" style="padding: 10px 0 0;">
            <table class="dynamicTable table table-striped table-bordered table-primary table-condensed">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Profile ID</th>
                        <th>Balance</th>
                        <th>Credit</th>
                        <th>Debit</th>
                        <th>Blocked</th>
                        <th>Available</th>
                        @*<th>Status</th>*@
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (dynamic p in ViewBag.List)
                    {


                        <tr>
                            <td><a href="#" data-id="@p._id" title="@p.name">@p._id</a></td>
                            <td>@p.profile</td>
                            <td>@p.balance.ToString("N0")</td>
                            <td>@p.credit.ToString("N0")</td>
                            <td>@p.debit.ToString("N0")</td>
                            <td>@p.blocked.ToString("N0")</td>
                            <td>@p.available_balance.ToString("N0")</td>
                            @*<td>@p.status</td>*@
                            <td><p data-placement="top" data-toggle="tooltip" title="View Traces"><button class="btn btn-primary btn-xs" @*data-title="Edit" data-toggle="modal" data-target="#edit"*@><span class="glyphicon glyphicon-pencil"></span></button></p></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <h3>No data entry found!</h3>
}
