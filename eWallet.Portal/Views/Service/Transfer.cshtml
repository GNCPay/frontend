@{
    ViewBag.Title = "Chuyển khoản";
}
<div class="row">
    <div class="col-md-3 ">
        <ul class="bg nav nav-pills nav-stacked nav-pills-stacked-example">
            <li class="active"><a href="#" class="nav_link nav_wallet" data-href='@Url.Action("TransferWallet", "Service", null, null)'>Tới Tài khoản ví</a></li>
            <li><a href="#" class="nav_link nav_bank" data-href='@Url.Action("TransferBank", "Service", null, null)'>Tới Tài khoản ngân hàng</a></li>
            <li><a href="#" class="nav_link nav_mobile" data-href='@Url.Action("TransferMobile", "Service", null, null)'>Tới Người nhận qua Số di động</a></li>
@if(User.Identity.IsAuthenticated){
            <li><a href="#" class="nav_link nav_trans" data-href='@Url.Action("List", "Transaction", null, null)'>Tra soát giao dịch Chuyển khoản</a></li>
}
        </ul>
    </div>
    <div class="col-md-9 bg" id="main_content">
        @*@Html.Action("List", "Transaction", null);*@
    </div>
    <div id="error"></div>
</div>
<script>
    var $func = window.location.hash.substr(1);
    if ($func) {
        switch ($func) {
            case 'wallet':
                loadPage('@Url.Action("TransferWallet", "Service", null, null)');
                break;
            case 'bank':
                loadPage('@Url.Action("TransferBank", "Service", null, null)');
                break;
            case 'mobile':
                loadPage('@Url.Action("TransferMobile", "Service", null, null)');
                break;
            default:
                loadPage('@Url.Action("TransferMobile", "Service", null, null)');
                break;
        }
    } else {
        loadPage('@Url.Action("TransferWallet", "Service", null, null)');
    };
    $('.nav_link').click(function () {
        $('.nav_link').parent().removeClass("active");
        $(this).parent().addClass("active");
        loadPage($(this).data("href"));
    });
  
</script>