@{
    ViewBag.Title = "Nạp tiền điện thoại di động";
    Layout = null;
}
<ul class="breadcrumb">
    <li><a href='@Url.Content("/Home/Index")' class="glyphicons home"><i></i> eWallet</a></li>
    <li>Nạp tiền điện thoại di động</li>
</ul>
<div class="separator"></div>
<div id="login-dp" class="content-dp col-md-10 col-md-offset-1">
    <div class="form">
        <div class="form-group">
            <label class="sr-only" for="topup_provider">Mạng di động*</label>
            <select class="form-control" id="topup_provider">
                <option value="MOBI" data-service="TELCO">MẠNG DI ĐỘNG MOBIFONE</option>
                <option value="VTEL" data-service="TELCO">MẠNG DI ĐỘNG VIETTEL</option>
                <option value="VINA" data-service="TELCO">MẠNG DI ĐỘNG VINAPHONE</option>
                <option value="VNAM" data-service="TELCO">MẠNG DI ĐỘNG VIETNAM MOBILE</option>
                <option value="GTEL" data-service="TELCO">MẠNG DI ĐỘNG GTEL</option>
            </select>
        </div>
        <div class="form-group">
            <label class="sr-only" for="mobile_topup_price">Mệnh giá nạp*</label>
            <select class="form-control" id="mobile_topup_price">
                <option value="0010" data-amount="10000">10,000 VNĐ</option>
                <option value="0020" data-amount="20000">20,000 VNĐ</option>
                <option value="0050" data-amount="50000">50,000 VNĐ</option>
                <option value="0100" data-amount="100000">100,000 VNĐ</option>
                <option value="0200" data-amount="200000">200,000 VNĐ</option>
                <option value="0500" data-amount="500000">500,000 VNĐ</option>
            </select>
        </div>
        <div class="form-group">
            <label class="sr-only" for="txt_bill_code">Số di động*</label>
            @*<input type="text" class="form-control" id="txt_bill_code" placeholder="Mã hóa đơn, khách hàng">*@
                <input type="text" class="form-control" id="txt_bill_code" placeholder="Số di động">
        </div>
        <div class="form-group" id="payment_method">
            <a class="btn btn-primary" data-toggle="modal" href="#myModal"><i class="glyphicon glyphicon-credit-card"></i> Thẻ ATM</a>
            <a class="btn btn-primary" data-toggle="modal" href="#paybyeWalletModal"><i class="glyphicon glyphicon-piggy-bank"></i> Ví GNC</a>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        //$('#payment_method').hide();
        $('#cb_providers').hide();
        $('#cb_providers option').hide();

        $('#cb_services').change(function () {
            $('#cb_providers').show();
            var $selected_service = $('#cb_services').val();
            $('#cb_providers option').hide();
            if ($selected_service) {
                $('#cb_providers option[data-service="' + $selected_service + '"]').show();
                $('#btn_check_bill').show();
            }
        });
        $('#btn_check_bill').click(function () {
            var $billNo = $('#txt_bill_code').val();
            var $service = $('#cb_services').val();
            var $provider = $('#cb_providers').val();
            if ($billNo) {
                $.ajax({
                    url: '@Url.Action("CheckBill", "Payment")',
                    contentType: 'application/json; charset=utf-8',
                    type: 'GET',
                    dataType: 'json',
                    data: { service: $service, provider: $provider, bill_code: $billNo }
                })
               .success(function (result) {
                   if (result.error_code == "00") {
                       //var resp = result.response;
                       $('#txt_bill_amount').val("123232");
                       $('#txt_bill_customer').val(result.response);
                       $('#payment_method').show();
                   }
                   else {
                       alert(result.error_message);
                   }
               })
               .error(function (xhr, status) {
                   //alert("Không thể load dữ liệu. Vui lòng thử lại sau!");
               });
            }
            else {
                alert('Bạn cần nhập vào mã hóa đơn/mã khách hàng');
            }
        });
    });
</script>
